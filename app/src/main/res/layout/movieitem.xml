<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="@dimen/image_item_width"
    android:layout_height="@dimen/image_item_height"
    android:layout_margin="@dimen/movie_item_margin"

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/image_item_width"
        android:layout_height="@dimen/image_item_height"
        app:cardCornerRadius="@dimen/corner_radius">


        <ImageView
            android:id="@+id/image"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sampleimage"
            android:gravity="center"
            />
        <TextView
            android:gravity="center"
            android:padding="@dimen/padding_20"
            android:layout_gravity="center"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="ssssssssssssssssd"
            android:textColor="@color/blue"
            />

    </androidx.cardview.widget.CardView>


</LinearLayout>